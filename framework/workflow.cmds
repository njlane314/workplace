# heron workflow commands


# build filelists for each partition
USER_NAME=nlane RELEASE=v08_00_00_82 NAME=numi_fhc_run1 
source scripts/partition-lists.sh

# aggregate art output
heron art "beam_s0:scratch/out/filelists/beam_s0.list:overlay:numi"
heron art "beam_s1:scratch/out/filelists/beam_s1.list:overlay:numi"
heron art "beam_s2:scratch/out/filelists/beam_s2.list:overlay:numi"
heron art "beam_s3:scratch/out/filelists/beam_s3.list:overlay:numi"
